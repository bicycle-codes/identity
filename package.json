{
  "name": "@ssc-half-light/identity",
  "description": "An identity record",
  "type": "module",
  "version": "0.2.5",
  "main": "dist/index.js",
  "scripts": {
    "start": "concurrently --kill-others \"npx partykit dev\" \"npx vite\"",
    "lint": "standardx -v \"./**/*.ts\"",
    "test": "cd test && esbuild ./index.ts --platform=node --format=esm | NODE_ENV=dev node --input-type=module | tap-arc",
    "build-browser-tests": "esbuild ./test/browser.ts --bundle --keep-names > test/test-bundle.js",
    "test:browser": "npm run build-browser-tests && cat test/index.html | tape-run --input=html --static=test | tap-arc",
    "build-cjs": "esbuild src/*.ts --format=cjs --keep-names --bundle --outdir=./dist --out-extension:.js=.cjs",
    "build": "mkdir -p ./dist && rm -rf ./dist/* && npm run build-cjs && tsc --project tsconfig.build.json && npm run build:min:esm",
    "build-example": "vite build",
    "build:min:esm": "mkdir -p ./dist && esbuild ./src/*.ts --sourcemap=inline --outdir=./dist --format=esm --minify --keep-names --bundle --out-extension:.js=.min.js",
    "preversion": "npm run lint",
    "version": "auto-changelog -p --template keepachangelog --breaking-pattern 'BREAKING CHANGE:' && git add CHANGELOG.md",
    "postversion": "git push --follow-tags && export $(cat .env | grep -v \"#\" | xargs) && npm publish && npm publish --@ssc-half-light:registry=https://registry.npmjs.org",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@nichoth/nanoid": "^5.0.7",
    "@nichoth/nanoid-dictionary": "^5.0.2",
    "@oddjs/odd": "^0.37.2",
    "@ssc-half-light/util": "^0.11.3",
    "one-webcrypto": "^1.0.3",
    "uint8arrays": "^5.0.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@nichoth/components": "^0.16.4",
    "@nichoth/debug": "^0.5.0",
    "@nichoth/routes": "^3.0.7",
    "@nichoth/tapzero": "^0.8.4",
    "@preact/preset-vite": "^2.7.0",
    "@preact/signals": "^1.2.2",
    "@ssc-hermes/node-components": "^0.1.12",
    "@typescript-eslint/parser": "^6.21.0",
    "auto-changelog": "^2.4.0",
    "concurrently": "^8.2.2",
    "esbuild": "^0.19.12",
    "partykit": "^0.0.84",
    "partysocket": "0.0.21",
    "postcss-nesting": "^12.0.2",
    "preact": "^10.19.3",
    "route-event": "^4.2.17",
    "standardx": "^7.0.0",
    "tap-arc": "^1.2.2",
    "tape-run": "^11.0.0",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1",
    "vite": "^5.1.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./*": {
      "import": [
        "./dist/*.js",
        "./dist/*"
      ],
      "require": [
        "./dist/*.cjs",
        "./dist/*"
      ]
    }
  },
  "files": [
    "dist/*",
    "LICENSE"
  ],
  "author": "nichoth <nichoth@gmail.com> (https://nichoth.com)",
  "license": "SEE LICENSE IN LICENSE",
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ssc-hermes/identity.git"
  },
  "keywords": [
    "identity"
  ],
  "bugs": {
    "url": "https://github.com/ssc-hermes/identity/issues"
  },
  "homepage": "https://github.com/ssc-hermes/identity#readme"
}
