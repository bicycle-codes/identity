{
  "name": "@ssc-half-light/identity",
  "description": "An identity record",
  "type": "module",
  "version": "0.1.7",
  "main": "dist/index.js",
  "scripts": {
    "start": "concurrently --kill-others \"npx partykit dev\" \"npx vite\"",
    "lint": "standardx -v \"./**/*.ts\"",
    "test": "cd test && esbuild ./index.ts --platform=node --format=esm --keep-names | node --input-type=module | tap-arc",
    "build-browser-tests": "esbuild ./test/browser.ts --bundle --keep-names > test/test-bundle.js",
    "test:browser": "npm run build-browser-tests && cat test/index.html | tape-run --input=html --static=test | tap-arc",
    "build-cjs": "esbuild src/*.ts --format=cjs --keep-names --bundle --outdir=./dist --out-extension:.js=.cjs",
    "build": "mkdir -p ./dist && rm -rf ./dist/* && npm run build-cjs && tsc --project tsconfig.build.json && npm run build:min:esm",
    "build-example": "vite build",
    "build:min:esm": "mkdir -p ./dist && esbuild ./src/*.ts --sourcemap=inline --outdir=./dist --format=esm --minify --keep-names --bundle --out-extension:.js=.min.js",
    "preinstall": "export $(cat .env | xargs)",
    "preversion": "npm run lint",
    "postversion": "git push && git push --tags && export $(cat .env | xargs) && npm publish",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@nichoth/nanoid": "^5.0.1",
    "@nichoth/nanoid-dictionary": "^5.0.2",
    "@oddjs/odd": "^0.37.1",
    "@ssc-half-light/util": "^0.10.4",
    "one-webcrypto": "^1.0.3",
    "partysocket": "0.0.8",
    "uint8arrays": "^4.0.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@nichoth/components": "^0.10.0",
    "@nichoth/routes": "^3.0.7",
    "@nichoth/tapzero": "^0.8.0",
    "@preact/preset-vite": "^2.5.0",
    "@preact/signals": "^1.2.1",
    "@ssc-hermes/node-components": "^0.1.0",
    "@typescript-eslint/parser": "^5.55.0",
    "concurrently": "^8.2.1",
    "esbuild": "^0.15.18",
    "partykit": "^0.0.30",
    "partysocket": "^0.0.10",
    "postcss-nesting": "^12.0.1",
    "preact": "^10.18.1",
    "route-event": "^4.1.10",
    "standardx": "^7.0.0",
    "tap-arc": "^0.3.5",
    "tape-run": "^11.0.0",
    "typescript": "^5.2.2",
    "uuid": "^9.0.1",
    "vite": "^4.4.9"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./*": {
      "import": [
        "./dist/*.js",
        "./dist/*"
      ],
      "require": [
        "./dist/*.cjs",
        "./dist/*"
      ]
    }
  },
  "files": [
    "dist/*",
    "LICENSE"
  ],
  "author": "nichoth <nichoth@gmail.com> (https://nichoth.com)",
  "license": "SEE LICENSE IN LICENSE",
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ssc-hermes/identity.git"
  },
  "keywords": [
    "identity"
  ],
  "bugs": {
    "url": "https://github.com/ssc-hermes/identity/issues"
  },
  "homepage": "https://github.com/ssc-hermes/identity#readme"
}
