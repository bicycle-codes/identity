{
  "name": "@bicycle-codes/identity",
  "description": "An identity record",
  "type": "module",
  "version": "0.7.3",
  "main": "dist/index.js",
  "scripts": {
    "start": "concurrently --kill-others \"npx partykit dev\" \"npx vite\"",
    "lint": "eslint \"./**/*.{ts,js}\"",
    "test": "npm run test:browser",
    "build-browser-tests": "esbuild ./test/browser.ts --bundle --keep-names > test/test-bundle.js",
    "test:browser": "npm run build-browser-tests && cat test/index.html | tape-run --input=html --static=test | tap-spec",
    "build-cjs": "esbuild src/*.ts --format=cjs --sourcemap=inline --keep-names --bundle --outdir=./dist --out-extension:.js=.cjs",
    "build-esm": "tsc --project tsconfig.build.json",
    "build": "mkdir -p ./dist && rm -rf ./dist/* && npm run build-cjs && npm run build-esm && npm run build:min:esm",
    "build-example": "vite build",
    "build:min:esm": "mkdir -p ./dist && esbuild ./src/*.ts --sourcemap=inline --outdir=./dist --format=esm --minify --keep-names --bundle --out-extension:.js=.min.js",
    "toc": "markdown-toc --maxdepth 3 -i README.md",
    "preversion": "npm run lint",
    "version": "npm run toc && auto-changelog -p --template keepachangelog --breaking-pattern 'BREAKING CHANGE:' && git add CHANGELOG.md",
    "postversion": "git push --follow-tags && npm publish",
    "prepublishOnly": "npm run build"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./min": "./dist/index.min.js",
    "./*.min.js": {
      "import": [
        "./dist/*.min.js"
      ]
    },
    "./*": {
      "import": [
        "./dist/*.js",
        "./dist/*"
      ],
      "require": [
        "./dist/*.cjs",
        "./dist/*"
      ]
    }
  },
  "dependencies": {
    "@nichoth/nanoid": "^5.0.8",
    "@nichoth/nanoid-dictionary": "^5.0.2",
    "idb-keyval": "^6.2.1",
    "tweetnacl": "^1.0.3",
    "uint8arrays": "^5.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@bicycle-codes/debug": "^0.6.13",
    "@bicycle-codes/one-webcrypto": "^1.1.2",
    "@bicycle-codes/routes": "^4.0.7",
    "@bicycle-codes/tapzero": "^0.10.3",
    "@nichoth/components": "^0.16.7",
    "@preact/preset-vite": "^2.8.2",
    "@preact/signals": "^1.2.3",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "auto-changelog": "^2.4.0",
    "concurrently": "^8.2.2",
    "esbuild": "^0.23.0",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "markdown-toc": "^1.2.0",
    "partykit": "^0.0.108",
    "partysocket": "1.0.2",
    "postcss-nesting": "^13.0.0",
    "preact": "^10.20.2",
    "route-event": "^6.0.0",
    "tap-spec": "^5.0.0",
    "tape-run": "^11.0.0",
    "typescript": "^5.4.5",
    "uuid": "^10.0.0",
    "vite": "^5.2.8"
  },
  "files": [
    "dist/*"
  ],
  "author": "nichoth <nichoth@nichoth.com> (https://nichoth.com)",
  "license": "SEE LICENSE IN LICENSE",
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bicycle-codes/identity.git"
  },
  "keywords": [
    "identity"
  ],
  "bugs": {
    "url": "https://github.com/bicycle-codes/identity/issues"
  },
  "homepage": "https://github.com/bicycle-codes/identity#readme"
}
